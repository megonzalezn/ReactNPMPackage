{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
  },
  "jsx": "react",
  "declaration": true,
  "moduleResolution": "node",
  "forceConsistentCasingInFileNames": true,
  "noImplicitReturns": true,
  "noImplicitThis": true,
  "noImplicitAny": true,
  "strictNullChecks": true,
  "suppressImplicitAnyIndexErrors": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "preserveConstEnums": true,
  "removeComments": true,
  "sourceMap": true,
  "target": "es5",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example",
    "rollup.config.js"
  ]
}